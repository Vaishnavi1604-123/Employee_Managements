@model IEnumerable<Employee_Managements.Models.EmpDetails>

@{
    ViewData["Title"] = "EmpDetails";
}

<h1>EmpDetails</h1>

<p>
    <a asp-action="CreateEmployee">Add Employee</a>
</p>

<p>
    <a asp-action="Index">Filter</a>
</p>
<table class="table">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model=>model.Id)
            </th>*@
            <th>
               Name
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.Last_Name)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem=>item.Id)
            </td>*@
            <td>
                @(item.First_Name+" "+item.Last_Name)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Last_Name)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
  
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
