<script type="text/javascript">

    $(document).ready(function () {
        

        $('#SaveButton').click(function () {
            Console.log("Button Clicked");
            debugger;

            var FirstName = $('#FirstName').val();

            var LastName = $('#LastName').val();

            var DesignationId = $('#DesignationId').val();
            var Experience=$('#Experience').val();

            var Save = $('#Button').attr('checked');

            $.ajax({

                type: 'post',

                contentType: "application/json; charset=utf-8",
                process-Data:false,

                url: '@Url.Action("CreateAjax","Employee")',

                data: JSON.stringify({ First_Name: FirstName, Last_Name: LastName, DesignationId=DesignationId, Experience=Experience }),

                success: function (response) {

                    alert("Record Has been Saved in Database. Status code: " + response);

                }

            });

        });

    });

</script>






